{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "~src/*": ["*"],
      "~styles/*": ["styles/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
